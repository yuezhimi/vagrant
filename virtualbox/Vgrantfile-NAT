# -*- mode: ruby -*-
# vi: set ft=ruby :

host_list = [
  {
    :name => "host1",
    :box => "centos/7"
  }
]

Vagrant.configure("2") do |config|
  config.vm.network "forwarded_port", guest: 80, host: 8080 
  host_list.each do |item|
    config.vm.defline item[:name] do |host|
      host.vm.box = item[:box]
    end
  end
end